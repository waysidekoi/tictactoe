<script type="text/javascript">
  $(document).ready(function(){
    var game = new Game();
    $('td').on('click', function(){
      $(this).text(game.x_or_o);
      game.update($(this).attr('class'));
      game.my_turn = !game.my_turn;
    });
  });

  function Game(){
    this.state = ['-','-','-','-','-','-','-','-','-'];
    this.x_or_o = "O";
    this.my_turn = true;
  }
  Game.prototype.update = function(position){
    this.state[position-1]=this.x_or_o;
    alert(this.my_turn);
  }
</script>
